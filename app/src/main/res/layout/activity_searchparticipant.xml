<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchparticipant">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/cricket"
            android:onClick="oncricket"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="65dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="249dp"
            android:layout_height="150dp"
            android:background="@drawable/football"
            android:onClick="onfootball"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="279dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="247dp"
            android:layout_height="150dp"
            android:background="@drawable/volleyball"
            android:onClick="onvolleyball"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="65dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="249dp"
            android:layout_height="150dp"
            android:background="@drawable/karate"
            android:onClick="onkarate"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="279dp" />
    </LinearLayout>
</ScrollView>